{
    "name": "test-react-hooks",
    "version": "*",
    "description": "Testing for react hooks",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "repository": "git@github.com:andrew-w-ross/test-react-hooks.git",
    "author": "Andrew Ross <rossirsa@gmail.com>",
    "license": "MIT",
    "engines": {
        "node": ">= 12"
    },
    "peerDependencies": {
        "react": ">= 16.14.0",
        "react-test-renderer": ">= 16.14.0"
    },
    "devDependencies": {
        "@types/jest": "26.0.22",
        "@types/node": "^14.14.41",
        "@types/react": "^17.0.3",
        "@types/react-test-renderer": "^17.0.1",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "eslint": "^7.24.0",
        "eslint-config-prettier": "^8.2.0",
        "eslint-plugin-react": "^7.23.2",
        "eslint-plugin-react-hooks": "^4.2.0",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "prettier-eslint": "^12.0.0",
        "react": "^17.0.2",
        "react-test-renderer": "^17.0.2",
        "ts-jest": "^26.5.5",
        "typescript": "^4.2.4"
    },
    "scripts": {
        "test": "jest",
        "fix": "eslint src/**/*.{ts,tsx} --fix",
        "lint": "eslint src/**/*.{ts,tsx}",
        "check": "yarn lint && yarn tsc",
        "clean": "rm -rf dist",
        "typecheck:watch": "yarn tsc --watch --noEmit",
        "build:tsc": "tsc -p tsconfig.build.json",
        "build": "yarn clean && yarn build:tsc",
        "prepublishOnly": "yarn run check && yarn build"
    },
    "jest": {
        "setupFilesAfterEnv": [
            "<rootDir>/src/jest.setup.ts"
        ],
        "clearMocks": true,
        "preset": "ts-jest",
        "roots": [
            "<rootDir>/src/"
        ],
        "testEnvironment": "node",
        "testTimeout": 200
    },
    "keywords": [
        "testing",
        "react",
        "hooks",
        "react-native",
        "unit",
        "react-hooks"
    ],
    "dependencies": {
        "rxjs": "^6.6.7"
    },
    "resolutions": {
        "examples": "portal:/home/ross/Projects/test-react-hooks-master/examples"
    }
}
