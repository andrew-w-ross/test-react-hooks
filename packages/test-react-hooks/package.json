{
    "name": "test-react-hooks",
    "version": "3.0.4",
    "description": "Testing for react hooks",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "repository": "git@github.com:andrew-w-ross/test-react-hooks.git",
    "author": "Andrew Ross <rossirsa@gmail.com>",
    "license": "MIT",
    "engines": {
        "node": ">= 12"
    },
    "peerDependencies": {
        "react": ">= 16.14.0",
        "react-test-renderer": ">= 16.14.0"
    },
    "devDependencies": {
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.14",
        "@types/react": "^17.0.38",
        "@types/react-test-renderer": "^17.0.1",
        "jest": "^27.4.7",
        "react": "^17.0.2",
        "react-test-renderer": "^17.0.2",
        "ts-jest": "^27.1.3",
        "typedoc": "^0.22.11",
        "typedoc-plugin-markdown": "^3.11.12",
        "typescript": "^4.5.5",
        "use-async-resource": "^2.2.2"
    },
    "scripts": {
        "clean": "rm -rf dist",
        "build:tsc": "tsc -p tsconfig.build.json",
        "build": "yarn clean && yarn build:tsc",
        "prepublishOnly": "yarn build",
        "docs": "typedoc"
    },
    "jest": {
        "setupFilesAfterEnv": [
            "<rootDir>/src/jest.setup.ts"
        ],
        "clearMocks": true,
        "preset": "ts-jest",
        "roots": [
            "<rootDir>/src/"
        ],
        "testEnvironment": "node",
        "testTimeout": 100
    },
    "keywords": [
        "testing",
        "react",
        "hooks",
        "react-native",
        "unit",
        "react-hooks"
    ],
    "dependencies": {
        "rxjs": "^7.5.2"
    }
}
