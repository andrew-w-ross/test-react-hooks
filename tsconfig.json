{
    "compilerOptions": {
        "rootDir": "./src",
        "target": "es2018",
        "outDir": "dist",
        "declaration": true,
        "strict": true,
        "jsx": "react-jsxdev",
        "module": "commonjs",
        "sourceMap": true,
        "lib": ["esnext", "dom"],
        "types": ["jest", "node"],
        "paths": {
            "*": ["src/@types/*"]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "noUnusedLocals": true
    },
    "include": ["src/**/*"]
}
